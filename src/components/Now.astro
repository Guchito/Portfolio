---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
import { Image } from 'astro:assets';
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2">
  <div class="flex justify-between w-full items-start mb-2">
    <div class="flex flex-col">
      <h2>Now</h2>
    </div>
    <Pulse />
  </div>
  <p class="text-xs">Currently working as front end developer at the <b>Nordic Blockchain Association</b></p>
  <a href="https://www.nordicblockchain.com/" target="_blank">
    <Image src="/NBA.png" alt="Logo of Nordic Blockchain Association" width="100" height="100" class="h-14 m-auto" />
  </a>
</Card>
