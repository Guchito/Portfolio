---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import Globe from "../components/Globe";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import { formatDate } from "../lib/helpers";

---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Agustin Gaggero - Full-stack web Developer"
  description="I'm a developer based in Denmark, My primary tools of choice includes: JavaScript, Typescript, React, Nodejs, Astro, MySQL, PostgreSQL and Tailwind CSS"
> 
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <Card
      colSpan="md:col-span-2"
      rowSpan="md:row-span-2"
      title="Projects & Portfolio"
      href="/portfolio"
    > 
      <p class= "text-xl md:text-2xl font-bold flex items-center" >Check my latest creations</p>
    </Card>
    <Now />
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-2 flex gap-4"
      title="Professional Experience"
      href="/work"
    >
    </Card>
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1"
      title="Countries I visited"
      href="travel"
      colorText="text-neutral-900"
      customClass="text-center"
    >
      <div class="h-full w-full absolute inset-0 -z-10">
        <Globe client:load />
    </div>
  </Card>
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2025 · Crafted with ♥️ using <a
          href="https://astro.build/"
          target="_blank"
          class="text-red-500">Astro</a
        > by Agustin.
      </p>
    </Card>
  </main>
</Layout>
