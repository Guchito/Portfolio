---
import Job from "../components/job.astro";
import Layout from "../layouts/Layout.astro";

---

<script>
  import { timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";

  const sequence = [loaderAnimation];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Professional Experience"
  description="Software developer with strong focus on the user experience animations and micro interactions"
>
  <div>
    <a
      href="/"
      class="text-white bg-neutral-900 hover:bg-neutral-800 px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg fixed left-4 top-4 z-50"
      >Back</a
    >
  </div>
  <main
    class="w-screen h-screen flex flex-col justify-start items-start max-w-3xl mx-auto p-8"
  >
    <h1 class="text-4xl font-bold mb-4 mt-20 text-neutral-100">Professional Experience</h1>
